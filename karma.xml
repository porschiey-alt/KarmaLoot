<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\..\FrameXML\UI.xsd">   
	<Script File="main.lua"/>
	<Frame name="karmaFrame" parent="UIParent">
		<Scripts>
			<OnLoad function="karma_OnLoad"></OnLoad>
			<OnEvent function="karma_OnEvent"></OnEvent>
		</Scripts>
	</Frame>
	<Button name="KarmaLoot_MinimapButton" parent="Minimap" enableMouse="true" movable="true" hidden="false" frameStrata="HIGH">
		<Size>
			<AbsDimension x="33" y="33"/>
		</Size>
		<Anchors>
			<Anchor point="TOPLEFT"/>
		</Anchors>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture name="KarmaLoot_MinimapButton_Icon" file="Interface\Addons\KarmaLoot\Textures\karmadicemmbtn.png">
					<Size>
						<AbsDimension x="21" y="21"/>
					</Size>
					<Anchors>
						<Anchor point="TOPLEFT">
							<Offset>
								<AbsDimension x="7" y="-6"/>
							</Offset>
						</Anchor>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="OVERLAY">
				<Texture file="Interface\Minimap\MiniMap-TrackingBorder">
					<Size>
						<AbsDimension x="56" y="56"/>
					</Size>
					<Anchors>
						<Anchor point="TOPLEFT"/>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
		<Frames>
			<Frame name="KarmaLoot_MinimapButton_DraggingFrame" hidden="true">
				<Scripts>
					<OnUpdate>
						KarmaLoot_MinimapButton_DraggingFrame_OnUpdate()
					</OnUpdate>
				</Scripts>
			</Frame>
		</Frames>
		<HighlightTexture alphaMode="ADD" file="Interface\Minimap\UI-Minimap-ZoomButton-Highlight"/>
		<Scripts>
			<OnLoad>
				KarmaLoot_MinimapButton:RegisterForClicks("LeftButtonUp","RightButtonUp")
				KarmaLoot_MinimapButton:RegisterForDrag("LeftButton","RightButton")
			</OnLoad>
			<OnEnter>
				if (not KarmaLoot_MinimapButton.dragging) then
					KarmaLoot_MinimapButton_OnEnter(self)
				end
			</OnEnter>
			<OnLeave>
				GameTooltip:Hide()
			</OnLeave>
			<OnDragStart>
				KarmaLoot_MinimapButton.dragging = true
				GameTooltip:Hide()
				KarmaLoot_MinimapButton:LockHighlight()
				KarmaLoot_MinimapButton_DraggingFrame:Show()
			</OnDragStart>
			<OnDragStop>
				self.dragging = false
				KarmaLoot_MinimapButton:UnlockHighlight()
				KarmaLoot_MinimapButton_DraggingFrame:Hide()
			</OnDragStop>
			<OnClick>
				KarmaLoot_MinimapButton_OnClick()
			</OnClick>
		</Scripts>
	</Button>
</Ui>
